@model IEnumerable<TicketTango.Models.Event>

@{
    ViewData["Title"] = "Index";
}

<div class="text-white">
    <h1>All Events History in TicketTango</h1>
    <h2>@TempData["message"]</h2>

    <p>
        <a asp-action="AddEvent">Add New Event</a>
    </p>
    <div class="table-responsive">
        <table class="table text-white">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Location)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DateOfEvent)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AvailableSeats)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TicketPrice)
                    </th>
                    <th>
                        Status
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
        @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Location)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateOfEvent)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AvailableSeats)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TicketPrice)
                    </td>
                    <td>
                        @if(item.DateOfEvent < DateTime.Now)
                        {
                            @Html.DisplayName("Completed")
                        }
                        else
                        {
                            @Html.DisplayName("Not Completed")
                        }
                    </td>
                    <td class="text-center">
                        <button class="btn btn-primary"><a class="text-white text-decoration-none" asp-action="UpdateEvent" asp-route-id="@item.ID">Edit</a></button>
                        <button class="btn btn-warning"><a class="text-white text-decoration-none" asp-action="GetEventByID" asp-route-id="@item.ID">Details</a></button>
                        <button class="btn btn-danger"><a class="text-white text-decoration-none" asp-action="DeleteEvent" asp-route-id="@item.ID">Delete</a></button>
                    </td>
                </tr>
        }
            </tbody>
        </table>
    </div>
</div>